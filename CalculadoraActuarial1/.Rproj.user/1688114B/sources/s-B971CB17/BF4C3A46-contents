## librerias ----

library(shiny)
library(timevis)

data <- data.frame(
  id      = 1:2,
  content = c("Pagos", "Pagos"),
  start   = c("2016-01-01","2016-01-02"),
  end     = c(NA, NA),
  style = c("color:black;", NA),
)

ui <- fluidPage(
  # column(width = 4,
  #        box()
  # ),
  column(width = 8,
         timevisOutput("timeline")
  )
)

server <- function(input, output, session) {
  output$timeline <- renderTimevis({
    timevis(data)
  })
}

shinyApp(ui = ui, server = server)